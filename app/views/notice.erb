<header>
  <div id="logo">
    <a href="/">Bookmark Manager</a>
  </div>
  <a href="/links/new" class="add-link button highlighted">Add link</a>
  <div id="user-links">    
    <% if current_user %>
      <span id="welcome-message">
        Welcome, <%= current_user.email %>  
      </span>
    
      <form id="sign-out" method="post" action="/sessions">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Sign out" class='button'>
      </form>
    <% else %>
      <a href='/users/new' id='sign-up' class='new-user button'>Sign up</a>
      <a href='/sessions/new' id='sign-in' class='new-session button'>Sign in</a>      
    <% end %>

  </div>
</header>


<% if flash[:notice] %>
  <div class='flash notice'>
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:errors] && !flash[:errors].empty? %>  
  <ul>
    <% flash[:errors].each do |error| %>
      <li class='flash error'><%= error %></li>
    <% end %>
  </ul>
<% end %>